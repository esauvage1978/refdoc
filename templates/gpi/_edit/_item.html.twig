{% if item is defined %}

	{% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
	{% import "macros/delele.html.twig" as del %}
	{% import "macros/submit.html.twig" as sub %}
	{{ form_start(form) }}


	<div class="row justify-content-center">
		<div class="{{ col_1_2 }}">
			{% embed 'widgets/card-widget.html.twig' %}
				{% block card_class %}
					flat
				{% endblock %}
				{% block card_body %}
					<div class="row">
						<div class=" col-12">
							<div class="form-group row">
								{{ form_label(form.page,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
								<div class="col">
									{{ form_errors(form.page) }}
									{{ form_widget(form.page) }}
								</div>
							</div>
							<div class="form-group row">
								{{ form_label(form.type,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
								<div class="col">
									{{ form_errors(form.type) }}
									{{ form_widget(form.type) }}
								</div>
							</div>
							<div class="form-group row">
								{{ form_label(form.name,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
								<div class="col">
									{{ form_errors(form.name) }}
									{{ form_widget(form.name) }}
								</div>
							</div>
							<div class="form-group row">
								<label class="col-sm-3 col-form-label" for="{{ form.isEnable.vars.id }}">
									Afficher
								</label>
								<div class="col mt-1 ">
									{{ form_widget(form.isEnable) }}
								</div>
							</div>
							<div class="form-group row">
								<label class="col-sm-3 col-form-label" for="{{ form.showDate.vars.id }}">
									Afficher la date
								</label>
								<div class="col mt-1 ">
									{{ form_widget(form.showDate) }}
								</div>
							</div>

						</div>
					</div>
					<div class="form-group row">
						{{ form_label(form.content,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
						<div class="col">
							{{ form_errors(form.content) }}
							{{ form_widget(form.content) }}
						</div>
					</div>

				{% endblock %}

			{% endembed %}
		</div>

	</div>
	{% import "macros/submit.html.twig" as sub %}
	<div class="d-none">{{ sub.btn() }}</div>
	{{ form_end(form) }}
	{% if item.id is not null %}
		{{ del.delete_form(route_del,item.id, 'show') }}
	{% endif %}
{% endif %}
