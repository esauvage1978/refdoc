{% if item is defined %}

	{% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
	{% import "macros/delele.html.twig" as del %}
	{% import "macros/submit.html.twig" as sub %}
	{{ form_start(form) }}


	<div style="width:630px">
		{% embed 'widgets/card-widget.html.twig' %}
			{% block card_class %}flat
			{% endblock %}
			{% block card_body %}
				{{ form_errors(form) }}

				<div class="form-group row m-2 js-createTip-wrapper">
					<p>{{ form_label(form.category) }}</p>
					{{ form_widget(form.category) }}

					<div class="createTip  mt-4">

						<div class="createTip__title">
							Type de document
						</div>
						<p>
							Choisir un libellé avec "<b>+ validation du contrôle</b>" pour que le porte document puisse être validé par le service contrôle
						</p>

					</div>
				</div>


			{% endblock %}

		{% endembed %}

		{% embed 'widgets/card-widget.html.twig' %}
			{% block card_class %}flat
			{% endblock %}
			{% block card_body %}
				{{ form_errors(form) }}

				<div class="form-group row m-2 js-createTip-wrapper">
					<p>
						<input type="radio" id="mp" name="mpp" value="mp" class="js-mpp" checked>
						<label for="mp" style="cursor:pointer">Macro processus</label>

					</p>

					<select name="cmb_mp" id="cmb_mp" class="form-control" required></select>


					<div class="d-none">
						{{ form_widget(form.mProcess) }}
					</div>

					<div class="createTip  mt-4">

						<div class="createTip__title">
							Macro processus
						</div>
						<p>
							Liste des macro-processus pour lesquels vous êtes contributeur.
						</p>
						<p>
							Le porte document doit être rattaché à un macro processus ou un processus
						</p>

					</div>
				</div>
				<div class="form-group row m-2 js-createTip-wrapper">
					<p>
						<input type="radio" id="p" name="mpp" value="p" class="js-mpp">

						<label for="p" style="cursor:pointer">Processus</label>
					</p>

					<select name="cmb_p" id="cmb_p" class="form-control" required></select>

					<div class="d-none">
						{{ form_widget(form.process) }}
					</div>

					<div class="createTip  mt-4">

						<div class="createTip__title">
							Processus
						</div>
						<p>
							Liste des processus pour lesquels vous êtes contributeur
						</p>

						<p>
							Le porte document doit être rattaché à un processus ou un macro processus

						</p>

					</div>
				</div>


			{% endblock %}

		{% endembed %}

		{% embed 'widgets/card-widget.html.twig' %}
			{% block card_class %}flat
			{% endblock %}
			{% block card_body %}
				{{ form_errors(form) }}

				<div class="form-group row m-2 js-createTip-wrapper">
					<p>{{ form_label(form.name) }}</p>
					{{ form_widget(form.name) }}
					<div class="createTip  mt-4">

						<div class="createTip__title">
							Nom du porte-document
						</div>
						<p>
							Il doit être concis et précis.
						</p>

					</div>
				</div>

				<div class="form-group row m-2 js-createTip-wrapper">


					<p>{{ form_label(form.content) }}</p>
					{{ form_widget(form.content) }}
					<div class="createTip   mt-5">

						<div class="createTip__title">
							Description
						</div>
						<p>
							La description est primordiale pour les consignes.
						</p>


					</div>

				</div>

			{% endblock %}

		{% endembed %}


		<p class="mt-5 mb-5"></p>
		<p class="mt-5 mb-5"></p>
	</div>
	{% import "macros/submit.html.twig" as sub %}<div class="d-none">{{ sub.btn() }}{{form_rest(form)}}</div>
	{{ form_end(form) }}
	{% if item.id is not null %}
		{{ del.delete_form(route_del,item.id, 'show') }}
	{% endif %}
{% endif %}
