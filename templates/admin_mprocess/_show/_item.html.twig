{% if item is defined %}

    <div class="row justify-content-center">
        <div class="{{ col_1_2 }}">
            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_class %} card-primary card-outline{% endblock %}
                {% block card_body_class %} box-profile{% endblock %}
                {% block card_body %}
                    <h3 class="profile-username text-center">{{ item.Name }}</h3>

                    <small class="float-right">
                        {% if item.isEnable %}
                            <span class="text-success">Visible</span>
                        {% else %}
                            <span class="text-danger">Masquée</span>
                        {% endif %}
                    </small>
                {% endblock %}
            {% endembed %}

            {% if item.content %}
                {% embed 'widgets/card-widget.html.twig' %}
                    {% block card_body %}
                        {{ item.content |raw }}
                    {% endblock %}
                {% endembed %}
            {% endif %}

            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_title %}Processus{% endblock %}
                {% block card_tools %}
                    {% if is_granted('ROLE_GESTIONNAIRE') %}
                        <a href="{{ path('admin_process_add') }}">
                            <i class="far fa-plus-square"></i> Ajouter un processus
                        </a>
                    {% endif %}
                {% endblock %}
                {% block card_body_class %}p-0{% endblock %}
                {% block card_body %}
                    {% import "macros/process.html.twig" as proc %}
                    {{ proc.views(item.processes) }}
                {% endblock %}
            {% endembed %}

            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_title %}Agent de Direction{% endblock %}
                {% block card_body_class %}p-0{% endblock %}
                {% block card_body %}
                    {% import "macros/user.html.twig" as usr %}
                    {{ usr.views(item.DirValidators) }}
                {% endblock %}
            {% endembed %}

            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_title %}Manager stratégique{% endblock %}
                {% block card_body_class %}p-0{% endblock %}
                {% block card_body %}
                    {% import "macros/user.html.twig" as usr %}
                    {{ usr.views(item.poleValidators) }}
                {% endblock %}
            {% endembed %}

            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_title %}Contributeurs{% endblock %}
                {% block card_body_class %}p-0{% endblock %}
                {% block card_body %}
                    {% import "macros/user.html.twig" as usr %}
                    {{ usr.views(item.contributors) }}
                {% endblock %}
            {% endembed %}

            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_title %}Abonnés{% endblock %}
                {% block card_body_class %}p-0{% endblock %}
                {% block card_body %}
                    <div class="users-list">
                        {% import "macros/user.html.twig" as usr %}
                        {% for s in item.subscriptions %}
                            {% if s.isEnable %}
                                {{ usr.view(s.user) }}
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>


{% endif %}